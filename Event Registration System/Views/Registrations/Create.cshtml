@model Event_Registration_System.Models.Registration

@{
    ViewData["Title"] = "Create Registration";
}

<div class="container mt-4">
    <h1 class="text-center">Create Registration</h1>

    <h4 class="text-center">Registration</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="ParticipantName" class="control-label"></label>
                    <input asp-for="ParticipantName" class="form-control" required />
                    <span asp-validation-for="ParticipantName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" required type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EventId" class="control-label"></label>
                    <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId" required>
                        <option value="">Select an Event</option> <!-- Default placeholder option -->
                    </select>
                    <span asp-validation-for="EventId" class="text-danger"></span>
                </div>


                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-link">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
