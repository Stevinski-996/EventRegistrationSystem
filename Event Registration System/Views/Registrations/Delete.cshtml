@model Event_Registration_System.Models.Registration

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="text-center">Delete Registration</h1>

    <h3 class="text-center">Are you sure you want to delete this?</h3>

    <div class="border p-3 mt-4 rounded shadow-sm">
        <h4>Registration Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ParticipantName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ParticipantName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Event)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Event.Description)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="RegistrationId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </form>
    </div>
</div>
