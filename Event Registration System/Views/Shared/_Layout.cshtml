<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags for responsiveness and character encoding -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Title dynamically set from ViewData -->
    <title>@ViewData["Title"] - Event Registration System</title>

    <!-- Bootstrap CSS for responsive design -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <!-- Header with responsive navigation -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-primary mb-3">
            <div class="container-fluid">
                <!-- Brand logo linking to Home page -->
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Event Registration System</a>

                <!-- Toggler for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collapsible navigation items -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Events" asp-action="Index">View Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Registrations" asp-action="Create">Event Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content container -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Placeholder for dynamic content -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer with copyright notice -->
    <footer class="bg-primary text-white text-center py-3">
        <div class="container">
            &copy; 2024 - Event Registration System - <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript and jQuery for Bootstrap functionality and site interactivity -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Additional scripts rendered if available -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
